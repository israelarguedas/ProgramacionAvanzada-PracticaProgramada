@model IEnumerable<PracticaProgramadaSolucion.Abstracciones.Modulos.Habitaciones.HabitacionesDto>

@{
    ViewBag.Title = "ObtenerTodasLasHabitaciones";
}

<h2>Habitaciones</h2>

<p>
    @Html.ActionLink("Registrar Nueva Habitación", "RegistrarHabitaciones")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodigoDeHabitacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreDeHabitacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ubicacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantidadDeHuespedesPermitidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantidadDeCamas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantidadDeBanos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EncargadoDeLimpieza)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostoDeLimpieza)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostoDeReserva)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoDeHabitacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoDeHabitacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreDeHabitacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ubicacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CantidadDeHuespedesPermitidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CantidadDeCamas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CantidadDeBanos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EncargadoDeLimpieza)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostoDeLimpieza)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostoDeReserva)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoDeHabitacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditarHabitaciones", new { id = item.Id }) |
            @Html.ActionLink("Ver Reservas", "ObtenerHistorialDeReservas", new { id = item.Id })
        </td>
    </tr>
}

</table>
